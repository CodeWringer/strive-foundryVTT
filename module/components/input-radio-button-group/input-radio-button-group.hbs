{{!-- Required context:
cssClass: {String | undefined}
readOnlyCssClass: {String | undefined}
// If provided, "parent" and "id" must be undefined!
viewModel: {ViewModel | undefined}

// If provided, "viewModel" must be undefined!
parent: {ViewModel | undefined}
id: {String | undefined}
propertyOwner: {Object | undefined}
propertyPath: {String | undefined}
localizableTitle: {String | undefined}
options: {Array<ChoiceOption> | undefined}
--}}
{{#viewModel parent id viewModel "InputRadioButtonGroupViewModel" propertyOwner propertyPath localizableTitle options}}
<div 
  type="hidden"
  class="custom-system-edit radio-button-group flex flex-row component-input-radio-button-group{{#if ../cssClass}} {{../cssClass}}{{/if}}" 
  data-property-path="{{propertyPath}}"
  name="{{id}}"
  id="{{id}}"
  value="{{value}}"
  title="{{localizedTitle}}"
>
  {{#each options as |option index|}}
    <div class="radio-button-container flex flex-row{{#if (../isSelectedOption ../this option)}} active{{/if}}">
      {{#if ../isEditable}}
        <input 
          type="radio" 
          class="radio-button" 
          name="{{../id}}-{{option.value}}" 
          id="{{../id}}-{{option.value}}" 
          value="{{option.value}}"
        />
      {{/if}}
      <label class="flex flex-middle{{#if ../isEditable}}{{else}} custom-system-read-only disabled{{/if}}{{#if ../showFancyFont}} fancy-font{{/if}}" 
        for="{{../id}}-{{option.value}}"
        {{#if (not option.shouldDisplayValue)}}title="{{option.localizedValue}}"{{/if}}
      >
        {{#if option.displayHtmlOverride}}
          {{{option.displayHtmlOverride}}}
        {{else}}
          {{#if option.shouldDisplayIcon}}
            {{#if option.iconIsFontAwesome}}
              <i class="{{option.icon}}"></i>
            {{else}}
              <img class="radio-button-icon" src="{{option.icon}}" />
            {{/if}}
          {{/if}}
          {{#if option.shouldDisplayValue}}
            <span>{{option.localizedValue}}</span>
          {{/if}}
        {{/if}}
      </label>
    </div>
  {{/each}}
</div>
{{/viewModel}}