{{!-- Required context:
viewModel: {ButtonViewModel}
cssClass: {String | undefined}
square: {Boolean | undefined}
fill: {Boolean | undefined}
heavy: {Boolean | undefined}
leftAlign: {Boolean | undefined}
--}}
<span class="button{{#if heavy}}{{else}} light{{/if}}{{#if square}} square{{/if}}{{#if fill}} fill{{/if}}{{#if (not viewModel.isEditable)}} disabled{{/if}}{{#if cssClass}} {{cssClass}}{{else}} font-size-default{{/if}}">
  <a class="custom-system-button pad-sm fill flex{{#if leftAlign}} flex-middle{{else}} flex-center{{/if}}" 
    id="{{viewModel.id}}"
  >
    {{#if viewModel.iconHtml}}{{{viewModel.iconHtml}}}{{/if}}
    {{#if viewModel.localizedLabel}}<span class="{{#if viewModel.showFancyFont}}fancy-font{{/if}}{{#if viewModel.iconHtml}} margin-l-md{{/if}}">{{viewModel.localizedLabel}}</span>{{/if}}
    {{#if @partial-block}}{{> @partial-block }}{{/if}}
  </a>
</span>