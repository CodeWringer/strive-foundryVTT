{{!-- Required context:
viewModel: {DiceRollListViewModel}
cssClass: {String | undefined}
--}}
<div class="flex flex-row{{#if cssClass}} {{cssClass}}{{/if}}">
  <div class="width-sm flex flex-center sheet-group-sidebar">
    {{#> button viewModel=viewModel.vmBtnRoll }}<i class="fas fa-dice-three"></i>{{/button}}
  </div>
  <ol class="unstyled-list flex-grow">
    {{#each viewModel.formulaViewModels as |vm index|}}
    <li class="ambersteel-list-row flex flex-row margin-b-md">
      {{!-- Formula list item --}}
      {{#with ../viewModel.formulaListItemTemplate as | template |}}
        {{> (template) viewModel=vm}}
      {{/with}}
    </li>
    {{/each}}
  </ol>
</div>