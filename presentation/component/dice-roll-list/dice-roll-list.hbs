{{!-- Required context:
viewModel: {DiceRollListViewModel}
cssClass: {String | undefined}
--}}
<div id="{{viewModel.id}}" class="flex flex-row{{#if cssClass}} {{cssClass}}{{/if}}">
  <div class="width-sm flex flex-center border-solid-r-md">
    {{> button viewModel=viewModel.vmBtnRoll }}
  </div>
  <ol class="unstyled-list flex-grow">
    {{#each viewModel.formulaViewModels as |vm index|}}
    <li class="strive-list-row flex flex-row margin-b-md">
      {{!-- Formula list item --}}
      {{#with ../viewModel.formulaListItemTemplate as | template |}}
        {{> (template) viewModel=vm}}
      {{/with}}
    </li>
    {{/each}}
  </ol>
</div>