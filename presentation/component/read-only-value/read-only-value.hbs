{{!-- Parameters:
viewModel: ReadOnlyValueViewModel
cssClass: undefined | String
--}}
<div id="{{viewModel.id}}" class="custom-system-read-only pad-sm border-solid-sm fill flex flex-row flex-middle auto-margin-h{{#if viewModel.admonish}} hint-card error{{/if}}{{#if cssClass}} {{cssClass}}{{/if}}">
  {{#if viewModel.admonish}}
  <div class="flex flex-center">
    <i class="fas fa-exclamation-triangle"></i>
  </div>
  {{/if}}
  <span class="flex flex-center flex-grow">{{viewModel.value}}</span>
</div>
