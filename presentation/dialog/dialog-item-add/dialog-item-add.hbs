{{!-- Parameters:
itemDeclarations: {[Object]} = {
  id: {String}
  name: {String}
  where: {String}
}
selected: {Object} = {
  id: {String}
  name: {String}
  where: {String}
}
isCustomChecked: {Boolean}
itemLabel: {String}
showFancyFont: {Boolean | undefined}
--}}
{{#> dialogContent}}
<div class="grid grid-2col">
  {{#> label showFancyFont=showFancyFont}}{{localize itemLabel}}{{/label}}
  <select class="ambersteel-item-select" data-property-path="selected">
    {{#select selected}}
    {{#each itemDeclarations as |itemDeclaration key|}}
    <option value="{{itemDeclaration.id}}">{{itemDeclaration.name}}</option>
    {{/each}}
    {{/select}}
  </select>
</div>
<div class="grid grid-2col">
  {{#> label showFancyFont=showFancyFont}}{{localize "ambersteel.general.custom"}}{{/label}}
  <input class="ambersteel-checkbox ambersteel-is-custom" type="checkbox" data-dtype="boolean" value="{{isCustomChecked}}" data-property-path="isCustomChecked" />
</div>
{{/dialogContent}}