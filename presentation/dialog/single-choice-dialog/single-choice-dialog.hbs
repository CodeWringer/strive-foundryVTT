{{!-- Parameters:
localizedLabel: {String}
choices: {Array<ChoiceOption>}
selected: ChoiceOption
showFancyFont: {Boolean | undefined}
--}}
{{#> dialogContent}}
<div class="selection sheet-block grid grid-2col">
  <div>
    {{> label text=localizedLabel showFancyFont=showFancyFont}}
  </div>
  <div class="flex">
    <select id="selection" class="ambersteel-item-select" data-property-path="selected">
      {{#select selected.value}}
      {{#each choices as |choice key|}}
      <option value="{{choice.value}}">{{choice.localizedValue}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>
</div>
{{/dialogContent}}