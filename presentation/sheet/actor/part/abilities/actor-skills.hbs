{{!-- Parameters:
viewModel: {ActorSkillsViewModel}
cssClass: {undefined | String}
--}}
<section id="{{viewModel.id}}" class="auto-margin-v-lg{{#if cssClass}} {{cssClass}}{{/if}}">
  {{> inputSearch viewModel=viewModel.vmSearch }}
  {{!-- Innate Skills --}}
  {{#if viewModel.hideInnateSkills}}<div class="hidden">{{/if}}
    <div>
      {{#> header1 showFancyFont=viewModel.showFancyFont cssClass="flex flex-row"}}
        <span class="flex-grow">{{localize "system.character.skill.innate.label"}}</span>
        {{#with viewModel.sortControlsTemplate as |template|}}
          {{> (template) viewModel=../viewModel.vmSortInnate cssClass="font-size-default" }}
        {{/with}}
      {{/header1}}
      {{> sortableList viewModel=viewModel.vmInnateSkillList prominentItemStyling=true }}
    </div>
  {{#if viewModel.hideInnateSkills}}</div>{{/if}}
  {{!-- Learning Skills --}}
  {{#if viewModel.hideLearningSkills}}<div class="hidden">{{/if}}
    <div>
      {{#> header1 showFancyFont=viewModel.showFancyFont cssClass="flex flex-row"}}
        <span class="flex-grow">{{localize "system.character.skill.learning.label"}}</span>
        {{#with viewModel.sortControlsTemplate as |template|}}
          {{> (template) viewModel=../viewModel.vmSortLearning cssClass="font-size-default" }}
        {{/with}}
      {{/header1}}
      {{> sortableList viewModel=viewModel.vmLearningSkillList prominentItemStyling=true }}
    </div>
  {{#if viewModel.hideLearningSkills}}</div>{{/if}}
  {{!-- Known Skills --}}
  <div>
    {{#> header1 showFancyFont=viewModel.showFancyFont cssClass="flex flex-row"}}
      <span class="flex-grow">{{localize "system.character.skill.known.label"}}</span>
      {{#with viewModel.sortControlsTemplate as |template|}}
        {{> (template) viewModel=../viewModel.vmSortKnown cssClass="font-size-default" }}
      {{/with}}
    {{/header1}}
    {{> sortableList viewModel=viewModel.vmKnownSkillList prominentItemStyling=true }}
  </div>
</section>