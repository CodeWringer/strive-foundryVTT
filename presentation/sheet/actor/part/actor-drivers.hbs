{{!-- Parameters:
viewModel: {ActorDriversViewModel}
cssClass: {undefined | String}
--}}
<section class="{{cssClass}}">
  {{#> header3 showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.driverSystem.ambition"}}{{/header3}}
  <div class="margin-b-md">
    {{> inputTextField viewModel=viewModel.vmTfAmbition }}
  </div>
  {{#> header3 showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.driverSystem.aspiration.plural"}}{{/header3}}
  {{#each viewModel.aspirationViewModels as |vm index|}}
    <div class="margin-b-md">
      {{> inputTextField viewModel=vm}}
    </div>
  {{/each}}
  {{#> header3 showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.driverSystem.reaction.plural"}}{{/header3}}
  {{#each viewModel.reactionViewModels as |vm index|}}
    <div class="margin-b-md">
      {{> inputTextField viewModel=vm}}
    </div>
  {{/each}}
</section>