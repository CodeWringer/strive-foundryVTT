{{!-- Parameters:
viewModel: {ActorPersonalsViewModel}
cssClass: {undefined | String}
--}}
<section id="{{viewModel.id}}" class="{{cssClass}}">
  <div class="flex sheet-block">
    <div class="flex flex-column">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "system.character.personals.species"}}{{/label}}
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "system.character.personals.sex"}}{{/label}}
    </div>
    <div class="flex flex-column flex-grow">
      {{> inputTextField viewModel=viewModel.vmTfSpecies }}
      {{> inputTextField viewModel=viewModel.vmTfSex }}
    </div>
    <div class="flex flex-column margin-l-md">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "system.character.personals.culture"}}{{/label}}
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "system.character.personals.age"}}{{/label}}
    </div>
    <div class="flex flex-column flex-grow">
      {{> inputTextField viewModel=viewModel.vmTfCulture }}
      {{> inputTextField viewModel=viewModel.vmTfAge }}
    </div>
  </div>
</section>