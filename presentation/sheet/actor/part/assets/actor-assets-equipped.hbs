{{!-- Parameters:
viewModel: {ActorAssetsEquippedViewModel}
cssClass: {undefined | String}
--}}
<section{{#if cssClass}} class="{{cssClass}}"{{/if}}>
  <ul class="unstyled-list">
    {{#each viewModel.assetSlotGroupViewModels as |vm index|}}
    {{#with ../viewModel.assetSlotGroupTemplate as | template |}}
    <li class="sheet-block flex margin-b-lg heavy-border-t">
      {{> (template) viewModel=vm}}
    </li>
    {{/with}}
    {{/each}}
    <li class="ambersteel-list-row ambersteel-list-footer">
      <div class="fill flex flex-row flex-right">
        <div>
          {{#> button viewModel=viewModel.vmBtnAddSlotGroup}}
            <span{{#if ../viewModel.showFancyFont}} class="fancy-font"{{/if}}>{{../viewModel.localizedAddSlotGroupLabel}}</span>
            <div class="button light square flex flex-center">
              <i class="fas fa-plus"></i>
            </div>
          {{/button}}
        </div>
      </div>
    </li>
  </ul>
</section>