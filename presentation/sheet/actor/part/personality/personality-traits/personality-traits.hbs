{{!-- Parameters:
viewModel: {PersonalityTraitsViewModel}
--}}
<div
  class="personality-traits grid-9col font-size-default{{#if viewModel.showFancyFont}} fancy-font{{/if}}"
  id="{{viewModel.id}}">
  {{!-- Header --}}
    <div class="flex flex-center">{{localize "ambersteel.character.personalityTrait.abbreviation"}}</div>
    <div class="grid-span-7 grid-7col margin-l-md margin-r-md">
      <div class="flex flex-center">{{localize "ambersteel.character.personalityTrait.signature"}}</div>
      <div class="flex flex-center">{{localize "ambersteel.character.personalityTrait.strong"}}</div>
      <div class="flex flex-center">{{localize "ambersteel.character.personalityTrait.weak"}}</div>
      <div class="flex flex-center">{{localize "ambersteel.character.personalityTrait.undecided"}}</div>
      <div class="flex flex-center">{{localize "ambersteel.character.personalityTrait.weak"}}</div>
      <div class="flex flex-center">{{localize "ambersteel.character.personalityTrait.strong"}}</div>
      <div class="flex flex-center">{{localize "ambersteel.character.personalityTrait.signature"}}</div>
    </div>
    <div class="flex flex-center">{{localize "ambersteel.character.personalityTrait.abbreviation"}}</div>
  {{!-- Rows --}}
  {{#each viewModel.personalityTraits as |obj index|}}
    <div class="flex flex-middle flex-right">{{localize obj.localizableTraitLeft}}</div>
    <div class="grid-span-7 margin-l-md margin-r-md">
      {{> inputRadioButtonGroup viewModel=obj.vmRadioButtonGroup}}
    </div>
    <div class="flex flex-middle">{{localize obj.localizableTraitRight}}</div>
  {{/each}}
</div>
