{{!-- Parameters:
viewModel: {AssetItemSheetViewModel}
cssClass: {undefined | String}
--}}
<form id="{{viewModel.id}}" class="flex flex-column{{#if cssClass}} {{cssClass}}{{/if}}" autocomplete="off">
  <header class="sheet-header">
    <div class="flex flex-column flex-grow">
      <div class="flex flex-row">
        {{> inputImage viewModel=viewModel.vmImg cssClass="custom-icon-md" }}
        <h1 class="header-name">
          {{> inputTextField viewModel=viewModel.vmTfName }}
        </h1>
        <div class="flex flex-center">
          {{> buttonTakeItem viewModel=viewModel.vmBtnTakeItem }}
          {{> buttonSendToChat viewModel=viewModel.vmBtnSendToChat }}
        </div>
      </div>
    </div>
  </header>
  {{!-- Quantity --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "system.character.asset.quantity.label"}}{{/label}}
    </div>
    <div class="grid-span-2">
      {{> inputNumberSpinner viewModel=viewModel.vmNsQuantity }}
    </div>
  </div>
  {{!-- Max quantity --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "system.character.asset.quantity.maximum"}}{{/label}}
    </div>
    <div class="grid-span-2">
      {{> inputNumberSpinner viewModel=viewModel.vmNsMaxQuantity }}
    </div>
  </div>
  {{!-- Bulk --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "system.character.asset.bulk"}}{{/label}}
    </div>
    <div class="grid-span-2">
      {{> inputNumberSpinner viewModel=viewModel.vmNsBulk }}
    </div>
  </div>
  {{!-- Tags --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "system.general.tags.label"}}{{/label}}
    </div>
    <div class="grid-span-2">
      {{> inputTags viewModel=viewModel.vmTags }}
    </div>
  </div>
  {{!-- Description --}}
  <div class="sheet-block flex flex-column flex-grow">
    {{#> header3 showFancyFont=viewModel.showFancyFont}}{{localize "system.general.description"}}{{/header3}}
    {{> inputRichText viewModel=viewModel.vmRtDescription }}
  </div>
</form>
