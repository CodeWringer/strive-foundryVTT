{{!-- Parameters:
viewModel: {ExpertiseTableViewModel}
cssClass: {undefined | String}
--}}
<div id="{{viewModel.id}}">
  {{#> header3 showFancyFont=viewModel.showFancyFont cssClass="flex flex-row flex-middle" }}
    <span>{{localize "system.character.skill.expertise.plural"}}</span>
    {{> buttonToggleVisibility viewModel=viewModel.vmToggleExpansion1 cssClass="flex-grow" }}
    {{> buttonAdd viewModel=viewModel.vmAddExpertise }}
  {{/header3}}
  <div class="expertise-list{{#if cssClass}} {{cssClass}}{{/if}}">
    <div class="{{#if viewModel.isExpanded}}{{else}}hidden{{/if}}" 
      data-vis-group="{{viewModel.visGroupId}}"
    >
      {{> sortableList viewModel=viewModel.vmExpertises }}
    </div>
    {{> buttonToggleVisibility viewModel=viewModel.vmToggleExpansion2 }}
  </div>
</div>
