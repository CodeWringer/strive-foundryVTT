{{!-- Parameters:
viewModel: {InjuryChatMessageViewModel}
cssClass: {undefined | String}
--}}
<section class="custom-system-chat-message{{#if cssClass}} {{cssClass}}{{/if}}" 
  data-view-model-id="{{viewModel.id}}"
  data-document-id="{{viewModel.entityId}}"
>
  {{!-- Header --}}
  <div class="flex flex-row">
    <div class="flex flex-center">
      <img class="inline-img header-image margin-r-sm" name="img" src="{{viewModel.document.img}}" title="{{viewModel.document.name}}" height="35" width="35" />
    </div>
    {{#> header2 showFancyFont=viewModel.showFancyFont cssClass="flex-grow"}}{{viewModel.document.name}}{{/header2}}
  </div>
  {{!-- Limit --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.injury.limit.label"}}{{/label}}
    </div>
    <div class="flex-grow">
      {{viewModel.document.limit}}
    </div>
  </div>
  {{!-- Time to heal --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.timeToHeal"}}{{/label}}
    </div>
    <div class="flex-grow">
      {{viewModel.document.timeToHeal}}
    </div>
  </div>
  {{!-- Scar --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.scar.singular"}}{{/label}}
    </div>
    <div class="flex-grow">
      {{viewModel.document.scar}}
    </div>
  </div>
  {{!-- Description --}}
  <div class="sheet-block multiline scrollable-height-md">
    {{> lazyRichText viewModel=viewModel.vmLazyDescription}}
  </div>
</section>