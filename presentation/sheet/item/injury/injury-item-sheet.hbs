{{!-- Parameters:
viewModel: {InjuryItemSheetViewModel}
cssClass: {undefined | String}
--}}
<form class="flex flex-column{{#if cssClass}} {{cssClass}}{{/if}}" autocomplete="off">
  <header class="sheet-header">
    <div class="flex flex-column flex-grow">
      <div class="flex flex-row">
        {{> inputImage viewModel=viewModel.vmImg cssClass="custom-icon-md" }}
        <h1 class="header-name">
          {{> inputTextField viewModel=viewModel.vmTfName }}
        </h1>
        <div class="flex flex-center">
          {{> buttonSendToChat viewModel=viewModel.vmBtnSendToChat }}
        </div>
      </div>
    </div>
  </header>
  {{!-- Limit --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.injury.limit.label"}}{{/label}}
    </div>
    <div class="grid-span-2">
      {{> inputTextField viewModel=viewModel.vmLimit }}
    </div>
  </div>
  {{!-- Time to heal --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.timeToHeal"}}{{/label}}
    </div>
    <div class="grid-span-2">
      {{> inputTextField viewModel=viewModel.vmTfTimeToHeal }}
    </div>
  </div>
  {{!-- Scar --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.scar.singular"}}{{/label}}
    </div>
    <div class="grid-span-2">
      {{> inputTextField viewModel=viewModel.vmScar }}
    </div>
  </div>
  {{!-- Description --}}
  <div class="sheet-block flex flex-column flex-grow">
    {{#> header3 showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.general.description"}}{{/header3}}
    {{> inputRichText viewModel=viewModel.vmRtDescription }}
  </div>
</form>