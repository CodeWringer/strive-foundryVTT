{{!-- Parameters:
viewModel: {InjuryListItemViewModel}
cssClass: {undefined | String}
--}}
<div class="custom-system-list-item{{#if cssClass}} {{cssClass}}{{/if}}">
  {{!-- Row 1 --}}
  <div class="flex flex-row flex-middle list-item-header">
    {{!-- Send to chat --}}
    {{> buttonSendToChat viewModel=viewModel.vmBtnSendToChat cssClass="" }}
    {{!-- Name --}}
    <span class="width-min-xl">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.injury.singular"}}{{/label}}
    </span>
    <div class="list-item-header-img">
      {{> inputImage viewModel=viewModel.vmImg cssClass="custom-icon-sm" }}
    </div>
    <div class="flex-grow margin-r-md">
      {{> inputTextField viewModel=viewModel.vmTfName cssClass="list-item-header" }}
    </div>
    {{!-- State --}}
    <div>
      {{> inputRadioButtonGroup viewModel=viewModel.vmRbgState }}
    </div>
    {{!-- Delete --}}
    {{> buttonDelete viewModel=viewModel.vmBtnDelete cssClass="" }}
  </div>
  {{!-- Row --}}
  {{!-- Description --}}
  <div class="flex flex-row border-solid-t-sm border-solid-b-sm">
    {{> inputRichText viewModel=viewModel.vmRtDescription }}
  </div>
  {{!-- Row --}}
  <div class="flex flex-row">
    {{!-- treatmentSkill --}}
    <div class="flex flex-row flex-grow">
      <span>
        {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.treatmentSkill"}}{{/label}}
      </span>
      <span class="width-md flex-grow">
        {{> inputTextField viewModel=viewModel.vmTreatmentSkill }}
      </span>
    </div>
    {{!-- Spacer --}}
    <div class="margin-r-lg"></div>
    {{!-- requiredSupplies --}}
    <div class="flex flex-row flex-grow">
      <span>
        {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.requiredSupplies"}}{{/label}}
      </span>
      <span class="width-md flex-grow">
        {{> inputTextField viewModel=viewModel.vmRequiredSupplies }}
      </span>
    </div>
  </div>
  {{!-- Row --}}
  <div class="flex flex-row">
    {{!-- obstaclePatchUp --}}
    <div class="flex flex-row flex-grow">
      <span>
        {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.obstaclePatchUp"}}{{/label}}
      </span>
      <span class="width-min-xl flex-grow">
        {{> inputTextField viewModel=viewModel.vmObstaclePatchUp }}
      </span>
    </div>
    {{!-- Spacer --}}
    <div class="margin-r-lg"></div>
    {{!-- obstacleTreatment --}}
    <div class="flex flex-row flex-grow">
      <span>
        {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.obstacleTreatment"}}{{/label}}
      </span>
      <span class="width-md flex-grow">
        {{> inputTextField viewModel=viewModel.vmObstacleTreatment }}
      </span>
    </div>
  </div>
  {{!-- Row --}}
  <div class="flex flex-row">
    {{!-- timeToHeal --}}
    <div class="flex flex-row flex-grow">
      <span>
        {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.timeToHeal"}}{{/label}}
      </span>
      <span class="width-min-xl flex-grow">
        {{> inputTextField viewModel=viewModel.vmTfTimeToHeal }}
      </span>
    </div>
    {{!-- Spacer --}}
    <div class="margin-r-lg"></div>
    {{!-- timeToHealTreated --}}
    <div class="flex flex-row flex-grow">
      <span>
        {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.timeToHealTreated"}}{{/label}}
      </span>
      <span class="width-min-xl flex-grow">
        {{> inputTextField viewModel=viewModel.vmTimeToHealTreated }}
      </span>
    </div>
    {{!-- Spacer --}}
    <div class="margin-r-lg"></div>
    {{!-- selfPatchUp --}}
    <div class="flex flex-row flex-grow">
      <span>
        {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.selfPatchUp"}}{{/label}}
      </span>
      <span class="width-min-xl flex-grow">
        {{> inputTextField viewModel=viewModel.vmSelfPatchUp }}
      </span>
    </div>
  </div>
  {{!-- Row --}}
  <div class="flex flex-row">
    {{!-- scar --}}
    <div class="flex flex-row flex-grow">
      <span>
        {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.scar.singular"}}{{/label}}
      </span>
      <span class="width-md flex-grow">
        {{> inputTextField viewModel=viewModel.vmScar }}
      </span>
    </div>
    {{!-- Spacer --}}
    <div class="margin-r-lg"></div>
    {{!-- limit --}}
    <div class="flex flex-row flex-grow">
      <span>
        {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.health.injury.limit.label"}}{{/label}}
      </span>
      <span class="width-md flex-grow">
        {{> inputTextField viewModel=viewModel.vmLimit }}
      </span>
    </div>
  </div>
</div>
