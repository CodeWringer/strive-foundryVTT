{{!-- Parameters:
viewModel: {ScarListItemViewModel}
cssClass: {undefined | String}
--}}
<div class="custom-system-list-item{{#if cssClass}} {{cssClass}}{{/if}}">
  {{!-- Row 1 --}}
  <div class="flex flex-row">
    {{!-- Send to chat --}}
    {{> buttonSendToChat viewModel=viewModel.vmBtnSendToChat }}
    {{!-- Name --}}
    <span class="width-min-xl">
      {{> inputLabel text=(localize "ambersteel.character.health.scar.singular") showFancyFont=viewModel.showFancyFont}}
    </span>
    {{> inputImage viewModel=viewModel.vmImg cssClass="custom-icon-sm" }}
    <h2 class="flex-grow margin-r-md">
      {{> inputTextField viewModel=viewModel.vmTfName }}
    </h2>
    {{!-- Delete --}}
    {{> buttonDelete viewModel=viewModel.vmBtnDelete }}
  </div>
  {{!-- Row 2 --}}
  {{!-- Limit --}}
  <div class="flex flex-row">
    <div class="flex flex-middle flex-right">
      {{> inputLabel text=(localize "ambersteel.character.health.injury.limit") showFancyFont=viewModel.showFancyFont}}
    </div>
    <div class="grid-span-2">
      {{> inputNumberSpinner viewModel=viewModel.vmNsLimit }}
    </div>
  </div>
  {{!-- Row 3 --}}
  {{!-- Modifiers --}}
  <h3>{{localize "ambersteel.general.modifier.plural"}}</h3>
  <div class="flex flex-row">
    {{> modifiersList viewModel=viewModel.vmModifiers}}
  </div>
  {{!-- Row 4 --}}
  {{!-- Description --}}
  <div class="flex flex-row">
    {{> inputRichText viewModel=viewModel.vmRtDescription cssClass="fill" }}
  </div>
</div>