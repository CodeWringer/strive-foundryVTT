{{!-- Parameters:
viewModel: {SkillAbilityListItemViewModel}
--}}
<div class="flex flex-row flex-wrap margin-b-md auto-margin-h">
  <div class="flex flex-row flex-middle auto-margin-h sheet-block">
    {{!-- AP cost --}}
    {{#> labeledControl viewModel=viewModel.vmNsApCost localizedIconToolTip=(localize "ambersteel.actionPoint.plural") iconClass="ico-action-point-solid" cssClass="" }}
      <div class="width-sm">
        {{> inputNumberSpinner }}
      </div>
    {{/labeledControl}}
    {{!-- Required Level --}}
    {{#> labeledControl viewModel=viewModel.vmNsRequiredLevel localizedIconToolTip=(localize "ambersteel.character.skill.ability.requirement") iconClass="ico-level-solid" cssClass="" }}
      <div class="width-sm">
        {{> inputNumberSpinner }}
      </div>
    {{/labeledControl}}
  </div>
</div>
