{{!-- Parameters:
viewModel: {SkillAbilityTableViewModel}
cssClass: {undefined | String}
--}}
<div id="{{viewModel.id}}">
  {{#> header3 showFancyFont=viewModel.showFancyFont cssClass="flex flex-row flex-middle" }}
    {{#> buttonToggleVisibility viewModel=viewModel.vmToggleExpansion1 fill=true cssClass="flex-grow" }}
      <span>{{localize "ambersteel.character.skill.ability.plural"}}</span>
      <div class="flex flex-center flex-grow">
        <i id="{{../viewModel.vmToggleExpansion1.id}}-icon" class="fas {{#if ../viewModel.isExpanded}}fa-angle-double-up{{else}}fa-angle-double-down{{/if}}"></i>
      </div>
    {{/buttonToggleVisibility}}
    {{> buttonAdd viewModel=viewModel.vmAddSkillAbility}}
  {{/header3}}
  <div class="skill-ability-list{{#if cssClass}} {{cssClass}}{{/if}}">
    <div class="{{#if viewModel.isExpanded}}{{else}}hidden{{/if}}" 
      data-vis-group="{{viewModel.visGroupId}}"
    >
      {{> sortableList viewModel=viewModel.vmSkillAbilities }}
    </div>
    {{#> buttonToggleVisibility viewModel=viewModel.vmToggleExpansion2 fill=true cssClass=(ifThenElse viewModel.isExpanded "font-size-lg line-height" "font-size-lg line-height hidden") }}
      <i class="fas fa-angle-double-up"></i>
    {{/buttonToggleVisibility}}
  </div>
</div>
