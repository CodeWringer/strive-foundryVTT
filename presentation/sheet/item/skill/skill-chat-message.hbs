{{!-- Parameters:
viewModel: {SkillChatMessageViewModel}
cssClass: {undefined | String}
--}}
<section class="custom-system-chat-message{{#if cssClass}} {{cssClass}}{{/if}}" 
  data-view-model-id="{{viewModel.id}}"
  data-document-id="{{viewModel.entityId}}"
>
  {{!-- Header --}}
  <div class="flex flex-row">
    <div class="flex flex-center">
      <img class="inline-img header-image margin-r-sm" name="img" src="{{viewModel.document.img}}" title="{{viewModel.document.name}}" height="35" width="35" />
    </div>
    {{#> header2 showFancyFont=viewModel.showFancyFont cssClass="flex-grow"}}{{viewModel.document.name}}{{/header2}}
  </div>
  {{!-- Related Attribute --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.attribute.singular"}}{{/label}}
    </div>
    <div class="flex-grow">
      {{viewModel.relatedAttribute}}
    </div>
  </div>
  {{!-- Category --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.general.category"}}{{/label}}
    </div>
    <div class="flex-grow">
      {{viewModel.document.category}}
    </div>
  </div>
  {{!-- Tags --}}
  <div class="flex flex-row sheet-block margin-b-md{{#if (neq viewModel.hasTags true)}} hidden{{/if}}">
    {{> inputTags viewModel=viewModel.vmTags }}
  </div>
  {{!-- Description --}}
  <div class="sheet-block scrollable-height-md">
    {{> lazyRichText viewModel=viewModel.vmLazyDescription}}
  </div>
  {{!-- Prerequisites --}}
  <div class="flex flex-column margin-b-sm{{#if (neq viewModel.showPrerequisites true)}} hidden{{/if}}">
    {{#> header3 showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.skill.prerequisite.plural"}}{{/header3}}
    <ul class="unstyled-list">
      {{#each viewModel.prerequisites as |prerequisite index|}}
      <li class="flex flex-row flex-middle sheet-block">
        <span class="flex flex-row flex-grow">
          {{prerequisite.name}}
        </span>
        <span class="width-md flex flex-center">
          {{prerequisite.minimumLevel}}
        </span>
      </li>
      {{/each}}
    </ul>
  </div>
  {{!-- apCost --}}
  {{#if viewModel.document.apCost}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.skill.ability.apCost"}}{{/label}}
    </div>
    <div class="flex-grow">
      {{viewModel.document.apCost}}
    </div>
  </div>
  {{/if}}
  {{!-- Obstacle --}}
  {{#if viewModel.document.obstacle}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.roll.obstacle.abbreviation"}}{{/label}}
    </div>
    <div class="flex-grow">
      {{viewModel.document.obstacle}}
    </div>
  </div>
  {{/if}}
  {{!-- Opposed By --}}
  {{#if viewModel.document.opposedBy}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.roll.obstacle.opposedBy.label"}}{{/label}}
    </div>
    <div class="flex-grow">
      {{viewModel.document.opposedBy}}
    </div>
  </div>
  {{/if}}
  {{!-- Condition --}}
  {{#if viewModel.document.condition}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.skill.ability.condition.label"}}{{/label}}
    </div>
    <div class="flex-grow">
      {{localize viewModel.document.condition}}
    </div>
  </div>
  {{/if}}
  {{!-- attackType --}}
  {{#if viewModel.document.attackType}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.attackType.label"}}{{/label}}
    </div>
    <div class="flex-grow">
      {{localize viewModel.document.attackType.localizableName}}
    </div>
  </div>
  {{/if}}
  {{!-- distance --}}
  {{#if viewModel.document.distance}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl">
      {{#> label showFancyFont=viewModel.showFancyFont}}{{localize "ambersteel.character.skill.ability.distance.label"}}{{/label}}
    </div>
    <div class="flex-grow">
      {{viewModel.document.distance}}
    </div>
  </div>
  {{/if}}
  {{!-- Damage --}}
  {{#if viewModel.showDamage}}
  <ol class="unstyled-list">
    {{#each viewModel.document.damage as |entry index|}}
      <li class="ambersteel-list-row sheet-block flex flex-column margin-b-md">
        {{!-- Damage formula --}}
        <div class="flex flex-row">
          <div class="width-min-xxl{{#if ../viewModel.showFancyFont}} fancy-font{{/if}}">
            {{localize "ambersteel.damageDefinition.formula"}}
          </div>
          <span class="width-min-xxl">
            {{entry.damage}}
          </span>
        </div>
        {{!-- Damage type --}}
        <div class="flex flex-row">
          <div class="width-min-xxl{{#if ../viewModel.showFancyFont}} fancy-font{{/if}}">
            {{localize "ambersteel.damageType.label"}}
          </div>
          <span class="width-xxl">
            {{localize entry.damageType.localizableName}}
          </span>
        </div>
      </li>
    {{/each}}
  </ol>
  {{/if}}
  {{!-- Skill Abilites --}}
  {{#if viewModel.hasAbilities}}
    <div data-vis-group="{{viewModel.id}}-abilities" class="{{#if viewModel.skillAbilitiesInitiallyVisible}}{{else}}hidden{{/if}}">
    {{#with viewModel.templateSkillAbility as | template |}}
    {{#each ../viewModel.skillAbilityViewModels as |vm index|}}
      {{> (template) viewModel=vm}}
    {{/each}}
    {{/with}}
    </div>
    <div class="line-height">
      {{#> buttonToggleVisibility viewModel=viewModel.vmBtnToggleVisibilityExpand fill=true cssClass=(ifThenElse viewModel.skillAbilitiesInitiallyVisible "hidden" "") }}
        <i class="fas fa-angle-double-down"></i>
      {{/buttonToggleVisibility}}
      {{#> buttonToggleVisibility viewModel=viewModel.vmBtnToggleVisibilityCollapse fill=true cssClass=(ifThenElse viewModel.skillAbilitiesInitiallyVisible "" "hidden") }}
        <i class="fas fa-angle-double-up"></i>
      {{/buttonToggleVisibility}}
    </div>
  {{/if}}
</section>