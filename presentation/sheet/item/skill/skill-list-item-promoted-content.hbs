{{!-- Parameters:
viewModel: {SkillListItemViewModel}
--}}
<div id="{{viewModel.id}}" class="flex flex-row flex-wrap margin-b-md margin-t-md auto-margin-h">
  {{!-- Level Block --}}
  <div class="flex flex-row flex-middle auto-margin-h sheet-block">
    <div class="flex flex-row auto-margin-h">
      {{!-- Level --}}
      {{#> labeledControl viewModel=viewModel.vmNsLevel localizedIconToolTip=(localize "system.character.advancement.level") iconClass="ico-level-solid" }}
        <div class="width-sm">
          {{> inputNumberSpinner }}
        </div>
      {{/labeledControl}}
      {{!-- Level Modifier --}}
      {{#> labeledControl viewModel=viewModel.vmNsLevelModifier localizedIconToolTip=(localize "system.character.advancement.modifier.label") iconClass="ico-level-modifier-solid" }}
        <div class="width-sm">
          {{> inputNumberSpinner }}
        </div>
      {{/labeledControl}}
      {{!-- Modified Level --}}
      <div class="flex flex-middle">
        <span class="pad-t-md pad-b-md pad-r-md font-bold font-bold">=</span>
        {{> readOnlyValue viewModel=viewModel.vmModifiedLevel cssClass="width-sm font-size-lg flex flex-center" }}
      </div>
    </div>
  </div>
  <div class="flex-grow"></div>
  {{#if viewModel.showAdvancementProgression}}
  {{!-- Advancement Requirements --}}
  <div class="flex flex-row flex-middle auto-margin-h sheet-block">
    {{!-- Successes --}}
    <div class="flex flex-gap-sm flex-middle flex-row">
      {{#> labeledControl viewModel=viewModel.vmNsSuccesses localizedLabel=(localize "system.character.advancement.requirements.success.abbreviation") }}
        <div class="width-sm">
          {{> inputNumberSpinner }}
        </div>
      {{/labeledControl}}
      <span class="font-size-lg">/</span>
      {{> readOnlyValue viewModel=viewModel.vmAdvancementRequirementSuccesses cssClass="width-min-sm" }}
    </div>
    {{!-- Failures --}}
    <div class="flex flex-gap-sm flex-middle flex-row">
      {{#> labeledControl viewModel=viewModel.vmNsFailures localizedLabel=(localize "system.character.advancement.requirements.failure.abbreviation") }}
        <div class="width-sm">
          {{> inputNumberSpinner }}
        </div>
      {{/labeledControl}}
      <span class="font-size-lg">/</span>
      {{> readOnlyValue viewModel=viewModel.vmAdvancementRequirementFailures cssClass="width-min-sm" }}
    </div>
    {{!-- Advanced --}}
    {{#> labeledControl viewModel=viewModel.vmAdvanced }}
      <div class="width-sm">
        {{> buttonCheckbox }}
      </div>
    {{/labeledControl}}
  </div>
  {{/if}}
</div>
