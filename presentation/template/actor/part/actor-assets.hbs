{{!-- Parameters:
viewModel: {ActorAssetsViewModel}
cssClass: {undefined | String}
--}}
<section class="{{cssClass}}">
  {{!-- Personal assets --}}
  <h2>{{localize "ambersteel.character.asset.onPerson"}}</h2>
  <div class="grid-2col grid-gap-md margin-b-md">
    {{!-- Maximum bulk --}}
    <div class="sheet-block">
      <div class="flex flex-row">
        <div class="flex-grow">
          {{> inputLabel text=(localize "ambersteel.character.asset.carryingCapacity.label") showFancyFont=viewModel.showFancyFont}}
        </div>
        <div class="ambersteel-read-only width-md pad-sm">
          {{> inputLabel text=viewModel.maxBulk showFancyFont=viewModel.showFancyFont}}
        </div>
      </div>
    </div>
    {{!-- Current bulk --}}
    <div class="sheet-block">
      <div class="flex flex-row">
        <div class="flex-grow">
          {{> inputLabel text=(localize "ambersteel.character.asset.carryingCapacity.used") showFancyFont=viewModel.showFancyFont}}
        </div>
        <div class="ambersteel-read-only width-md pad-sm">
          {{> inputLabel text=viewModel.currentBulk showFancyFont=viewModel.showFancyFont}}
        </div>
      </div>
    </div>
  </div>
  {{> itemGridView viewModel=viewModel.vmIgv }}
  {{!-- Remote assets --}}
  <h2>{{localize "ambersteel.character.asset.remote"}}</h2>
  {{> sortableList viewModel=viewModel.vmPropertyList }}
</section>