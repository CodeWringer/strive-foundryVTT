{{!-- Parameters:
viewModel: {FateCardViewModel}
cssClass: {undefined | String}
--}}
<section class="flex flex-column fate-card{{#if cssClass}} {{cssClass}}{{/if}}"
  data-view-model-id="{{viewModel.id}}"
  data-document-id="{{viewModel.item.id}}"
  data-item-id="{{viewModel.item.id}}"
>
  {{!-- Header --}}
  <div class="flex flex-column pad-md">
    <div class="flex flex-row">
      {{> inputImage viewModel=viewModel.vmImg cssClass="custom-icon-sm" }}
      <h3 class="header-name flex-grow" style="margin: 0;">
        {{> inputTextField viewModel=viewModel.vmTfName }}
      </h3>
    </div>
  </div>
  {{!-- Buttons below header --}}
  <div class="flex flex-row pad-r-md pad-l-md">
      <div class="flex flex-center">
        {{> buttonSendToChat viewModel=viewModel.vmBtnSendToChat }}
      </div>
    <div class="flex-grow"></div>
    {{> buttonDelete viewModel=viewModel.vmBtnDelete }}
  </div>
  {{!-- Description --}}
  <div class="fill pad-md scrollable-height-lg">
    {{> inputRichText viewModel=viewModel.vmRtDescription }}
  </div>
</section>