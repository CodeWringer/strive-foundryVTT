{{!-- Parameters:
viewModel: {ActorPersonalsViewModel}
cssClass: {undefined | String}
--}}
<section class="{{cssClass}}">
  <div class="flex sheet-block">
    <div class="flex flex-column">
      <label class="line-height pad-sm{{#if viewModel.showFancyFont}} fancy-font{{/if}}" for="person.species">{{localize "ambersteel.character.personals.species"}}</label>
      <label class="line-height pad-sm{{#if viewModel.showFancyFont}} fancy-font{{/if}}" for="person.sex">{{localize "ambersteel.character.personals.sex"}}</label>
    </div>
    <div class="flex flex-column flex-grow">
      {{> inputTextField viewModel=viewModel.vmTfSpecies }}
      {{> inputTextField viewModel=viewModel.vmTfSex }}
    </div>
    <div class="flex flex-column">
      <label class="line-height pad-sm{{#if viewModel.showFancyFont}} fancy-font{{/if}}" for="person.culture">{{localize "ambersteel.character.personals.culture"}}</label>
      <label class="line-height pad-sm{{#if viewModel.showFancyFont}} fancy-font{{/if}}" for="person.age">{{localize "ambersteel.character.personals.age"}}</label>
    </div>
    <div class="flex flex-column flex-grow">
      {{> inputTextField viewModel=viewModel.vmTfCulture }}
      {{> inputTextField viewModel=viewModel.vmTfAge }}
    </div>
  </div>
</section>