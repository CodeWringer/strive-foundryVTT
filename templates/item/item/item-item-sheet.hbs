{{!-- Parameters:
viewModel: {ItemItemSheetViewModel}
cssClass: {undefined | String}
--}}
<form class="flex flex-column{{#if cssClass}} {{cssClass}}{{/if}}" autocomplete="off">
  <header class="sheet-header">
    <div class="flex flex-column flex-grow">
      <div class="flex flex-row">
        {{> inputImage viewModel=viewModel.vmImg cssClass="custom-icon-md" }}
        <h1 class="header-name">
          {{> inputTextField viewModel=viewModel.vmTfName }}
        </h1>
        <div class="flex flex-center">
          {{> buttonTakeItem viewModel=viewModel.vmBtnTakeItem }}
          {{> buttonSendToChat viewModel=viewModel.vmBtnSendToChat }}
        </div>
      </div>
    </div>
  </header>
  {{!-- Quantity --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{> inputLabel text="ambersteel.labels.quantity"}}
    </div>
    <div class="grid-span-2">
      {{> inputNumberSpinner viewModel=viewModel.vmNsQuantity }}
    </div>
  </div>
  {{!-- Max quantity --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{> inputLabel text="ambersteel.labels.maxQuantity"}}
    </div>
    <div class="grid-span-2">
      {{> inputNumberSpinner viewModel=viewModel.vmNsMaxQuantity }}
    </div>
  </div>
  {{!-- SHAPE --}}
  {{!-- Width --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{> inputLabel text="ambersteel.labels.shapeWidth"}}
    </div>
    <div class="grid-span-2">
      {{> inputNumberSpinner viewModel=viewModel.vmNsShapeWidth }}
    </div>
  </div>
  {{!-- Height --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{> inputLabel text="ambersteel.labels.shapeHeight"}}
    </div>
    <div class="grid-span-2">
      {{> inputNumberSpinner viewModel=viewModel.vmNsShapeHeight }}
    </div>
  </div>
  {{!-- Bulk - read only! --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{> inputLabel text="ambersteel.labels.bulk"}}
    </div>
    <div class="grid-span-2">
        <div class="custom-system-read-only pad-sm fill">
          {{viewModel.item.data.data.bulk}}
        </div>
    </div>
  </div>
  {{!-- Description --}}
  <div class="sheet-block flex flex-column flex-grow">
    <h3 class="{{#if viewModel.showFancyFont}}fancy-font{{/if}}">{{localize "ambersteel.labels.description"}}</h3>
    {{> inputRichText viewModel=viewModel.vmRtDescription }}
  </div>
</form>
